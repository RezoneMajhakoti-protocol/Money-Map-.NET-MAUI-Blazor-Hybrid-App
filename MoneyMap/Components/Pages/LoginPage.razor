@page "/Login"
@layout LoginLayout
@inject NavigationManager navigationmanger
@inject ITData data

<div class="container-box">
	<div class="login-box">
		<h3 style="width: 50%; font-size: 23px; font-weight: bold; color: #313131; letter-spacing:2px;">Login</h3>
        <form>
			<label style="margin-top: 10px;" for="username">Username</label><br/>
			<input class="user-textfield" type="text" placeholder="Username" id="username" name="username" /><br />
			<label style="margin-top: 10px;" for="password">Password</label><br/>
			<input class="user-textfield" type="password" placeholder="Password" id="password" name="password" /><br />
			<div style="width: 100%; margin-top: 10px; display: flex; justify-content:right; align-items: center;">
				<button style="margin-top: 10px; margin: right;">Forgot Password?</button><br />
			</div>
			
			<input class="login-button-modify" type="button" value="Login" @onclick="DashboardPage"/>
		</form>
		<div style="width: 100%; margin-top: 15px; display: flex; justify-content: center; align-items: center">
			<button @onclick="RegisterPage">Don't have an account?&nbsp;<b> Register</b></button>
		</div>
		</div>
</div>
